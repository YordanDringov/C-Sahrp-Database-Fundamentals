--problem 02
CREATE TABLE Minions
(
Id INT NOT NULL PRIMARY KEY,
Name VARCHAR(50),
Age INT
)

CREATE TABLE Towns
(
Id NOT NULL PRIMARY KEY,
Name VARCHAR(50)
)

--problem 03
ALTER TABLE Minions
ADD TownId INT

ALTER TABLE Minions
DROP COLUMN TownId

ALTER TABLE Minions
ADD TownId INT
CONSTRAINT fk_townId FOREIGN KEY (TownId) REFERENCES Towns(Id)

